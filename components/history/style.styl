@require "colors"

.history__header
  margin: 30px 0
  display: flex
  position: relative
  img
    cursor: pointer
    width: 20px
    height: 20px

.history__header__layout
  align-items: center
  margin: auto
  > img:first-child
    margin-right: 20px

.history__header__btn
  position: absolute
  right: 0
  align-items: center
  > img:first-child
    margin-right: 20px


.history__grid-items
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  .history__item
    width: 48%
    flex-direction: column
    margin-bottom: 20px
  .history__img-container
    width: 100%
    height: 300px
  .history__item__results
    width: 100%

.history__list-items
  .history__item
    width: 100%
    margin-bottom: 30px
  .history__img-container
    width: 40%
  .history__item__results
    width: 55%
    margin-left: auto

.history__item
  box-sizing: border-box
  display: flex
  align-items: center

.history__img-container
  display: flex
  align-items: center
  justify-content: space-around
  > img
    max-width: 100%
    max-height: 100%

.history__item__results
  width: 100%
  padding: 0
  > li
    display: flex
    padding: 10px 0
    align-items: center
    > span:first-child
      margin-right: 20px
    > span:nth-child(2)
      overflow: hidden
      text-overflow: ellipsis
      width: 80%
    > img:last-child
      width: 20px
      margin-left: auto
      cursor: pointer
