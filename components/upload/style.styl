@require "colors"

.upload__dropzone
  width: 100%
  cursor: copy
  background: white
  // display: flex
  border-radius: 5px
  // flex-wrap: wrap
  box-shadow: 0 0 10px #aaa

.upload__dropzone--active
  border: 2px dashed $main

.upload__placeholder
  align-self: center
  margin: 0
  padding: 80px 20px
  text-align: center
  color: $gray

.upload__tip
  font-size: 0.9rem
  margin: 20px
  text-align: center
  color: $gray
  a
    color: $main

.upload__loading
  display: flex
  align-items: center
  margin-left: auto
  > div
    margin-right: 20px
    width: 30px
    height: 30px

.upload__item
  cursor: default
  padding: 20px 40px
  display: flex
  align-items: center
  > img
    width: 20%
    margin-right: 10%

.upload__item__result
  width: 70%
  padding: 0
  display: flex
  align-items: center
  justify-content: space-between
  > span:first-child
    margin-right: 20px
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    color: $main
  > img:last-child
    width: 20px
    margin-left: auto
    cursor: pointer
