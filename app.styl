@import "vendors/normalize.css"

html
  font-size: 14px
  font-family: Helvetica, Tahoma, Arial, "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", STXihei, "华文细黑" , SimSun, "宋体", Heiti, "黑体", sans-serif

body
  background: #E8E9EC
  font-size: 100%

#app
  width: 1000px
  margin: 50px auto

.dropzone
  width: 100%
  cursor: copy
  background: white
  display: flex
  border-radius: 5px
  flex-wrap: wrap
  box-shadow: 0 0 10px #aaa

.dropzone--active
  border: 2px dashed #0087F7

.placeholder
  align-self: center
  margin: 80px auto
  color: rgba(102,102,102,0.5)

.tip
  font-size: 0.9rem
  margin: 20px
  text-align: center
  color: rgba(102,102,102,0.5)

.item
  width: 100%
  cursor: default
  padding: 20px 40px
  display: flex
  align-items: center
  > img
    max-width: 200px

.item__status
  margin-left: auto
  color: gray

.item__results
  margin-left: auto
  padding: 0
  > li
    display: flex
    padding: 10px 0
    align-items: center
    > span:first-child
      margin-right: 20px
    > span:nth-child(2)
      width: 500px
      margin-right: 20px
    > span:last-child
      border-radius: 5px
      padding: 5px 20px
      color: #0087f7
      text-align: center
      border: solid 1px #0087f7
      cursor: pointer
      &:hover
        color: white
        background: #0087f7
